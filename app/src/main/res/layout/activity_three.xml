<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">


<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".two"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="40dp"
    android:layout_gravity="right"
    android:gravity="right"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:background="@drawable/buttonshape"
            android:textColor="#0225ea"
            android:id="@+id/number"
            android:inputType="number"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم التوكيل :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            />








    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:background="@drawable/buttonshape"
            android:textColor="#0225ea"
            android:id="@+id/name"
            android:paddingRight="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الموكل :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:background="@drawable/buttonshape"
            android:textColor="#0225ea"
            android:id="@+id/adress"
            android:paddingRight="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان الموكل :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="casual"
            />



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:background="@drawable/buttonshape"
            android:textColor="#0225ea"
            android:id="@+id/from"
            android:paddingRight="10dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="صادر من  :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:background="#3ee6d5"
            android:textColorLink="#567889"
            android:textColorHighlight="#971099"
            android:hint="اختار نوع التوكيل "
            android:textColorHint="#030303"
            android:layout_marginTop="10dp"
            android:id="@+id/type"
            ></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نوع التوكيل :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:visibility="visible"
            />




    </LinearLayout>











    <Button
            android:id="@+id/enter"

            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_gravity="center"

            android:layout_marginLeft="5dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="7"
            android:text="تسجيل"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            />






    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"

        android:visibility="invisible"
        android:background="#ffffff">

    </ListView>





</LinearLayout>
</ScrollView>