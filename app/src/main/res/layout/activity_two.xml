
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".two"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:gravity="right"
    android:background="#ffffff"
    android:layout_marginTop="30sp"
    android:layout_marginLeft="7dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_margin="6dp">

        <EditText
            android:layout_width="240sp"
            android:layout_height="32sp"
            android:background="@drawable/buttonshape"
            android:id="@+id/name1"
            android:textColor="#0542d1"
            android:paddingRight="10dp"


            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المدعي: "
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="240sp"
            android:layout_height="32sp"
            android:background="@drawable/buttonshape"
            android:id="@+id/name2"
            android:textColor="#0542d1"
            android:paddingRight="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الخصم :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:layout_marginBottom="10dp">
        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/Number"
            android:inputType="number"
            android:textColor="#0542d1"
            android:paddingRight="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم القضية :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">
        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/place"
            android:textColor="#0542d1"
            android:paddingRight="10dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المحكمة :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">

        <EditText
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:textColor="#0542d1"
            android:id="@+id/advocacyNumber"
            android:background="@drawable/buttonshape"
            android:inputType="number"
            android:paddingRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الدعوي :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"

            />




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:background="@drawable/shape123"
            android:hint="اختار نوع القضية "
            android:textColorHint="#030303"
           android:textColor="#0920ef"
            android:layout_marginBottom="10dp"
            android:id="@+id/type"
            ></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نوع القضية:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:visibility="visible"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        >

        <TextView
            android:layout_width="100sp"
            android:layout_height="26dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/time"
            android:textColor="#0542d1"
            android:inputType="time"
            />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text= "وقت الجلسة: "
           android:textColor="#000000"
           android:textSize="15sp"
           android:fontFamily="casual"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        >
        <TextView
            android:layout_width="100sp"
            android:layout_height="26dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/date"
            android:textColor="#0542d1"
            android:inputType="date"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاريخ الجلسة: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="casual"/>







    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5sp"
        android:layout_gravity="center_horizontal">





        <Button
            android:id="@+id/enter"

            android:text="تسجيل"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:background="@drawable/shape"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="7"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            />


    </LinearLayout>



</LinearLayout>

</ScrollView>